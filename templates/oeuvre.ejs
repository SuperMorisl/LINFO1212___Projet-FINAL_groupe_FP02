<!doctype html>
<html lang="fr">

<head>
  <meta charset="utf-8" />
  <title>C'est tourné ! - <%= oeuvre.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/oeuvre.js" defer></script>
  <link rel="icon" href="/site/logo.png">
  <link rel="stylesheet" href="/style.css">
</head>

<body>

  <nav>
    <div class="icon">
      <img src="/site/logo.png">
      <span class="blue">C'est tourné !</span>
    </div>
    <a href="/">
      <div class="ajouter retour"><span>❮</span><span>Retour</span></div>
    </a>
  </nav>

  <div class="tendance voir-oeuvre" style="background-image: url('/image/<%= oeuvre.image %>');"> <!-- Obligé car texte à l'intérieur -->
        <div class="details">
            <div class="ensemble">
                <div class="popularite"><%= type %></div>
                <div class="type"><%= oeuvre.date %></div>
                <div class="type"><%= oeuvre.author %></div>
            </div>
            <div class="description">
                <h1><%= oeuvre.title %></h1>
                <h2><%= oeuvre.description %></h2>
            </div>
            <div class="ensemble">
                <span class="star">★</span>
                <div class="notes">
                    <span><%= oeuvre.averageRating %></span>
                    <span class="grey">(<%= oeuvre.reviews.length %> avis)</span>
                </div>
                <div class="genres">
                  <% oeuvre.genre.forEach(g=> { %>
                        <span><%= g %></span>
                  <% }) %>
                </div>
            </div>
        </div>
  </div>

  <div class="votre-avis">
    <h1>Votre avis</h1>
    <div class="avis">
      <form class="form" action="/review/<%= encodeURIComponent(oeuvre.title) %>" method="POST">

        <div class="icon">
          <h2>Note :</h2>
          <!-- ATTENTION : On peut ne pas mettre de note -> note == 0 !!! -->
          <div class="rating">
            <input value="5" name="note" id="star5" type="radio">
            <label for="star5"></label>
            <input value="4" name="note" id="star4" type="radio">
            <label for="star4"></label>
            <input value="3" name="note" id="star3" type="radio">
            <label for="star3"></label>
            <input value="2" name="note" id="star2" type="radio">
            <label for="star2"></label>
            <input value="1" name="note" id="star1" type="radio">
            <label for="star1"></label>
          </div>
        </div>

        <div class="input-group">
          <textarea name="comment" id="avis" rows="5" required placeholder="Proposer votre avis sur cette œuvre..."></textarea>
        </div>
      
        <button class="sign" type="submit"><span>Envoyer votre avis</span></button>
      
      </form>
    </div>
  </div>
  <div class="liste-avis">
    <h1>Avis de la communauté <span class="grey">(<%= oeuvre.reviews.length %>)</span></h1>

    <% oeuvre.reviews.forEach(r=> { %>
      <div class="avis">
        <div class="icon">
          <img src="/site/profile.webp" onclick="openUserPopup('<%= r.user %>');">
          <h1><%= r.user %></h1>
        </div>

        <div class="rating">
          <% for (let i=1; i <=5; i++) { %>
            <% if (i <= r.note) { %>
              <span class="star">★</span>
            <% } else { %>
              <span class="star grey">★</span>
            <% } %>
          <% } %>
        </div>
   
        <h2><%= r.comment %></h2>

        <form action="/like/<%= encodeURIComponent(oeuvre.title) %>" method="POST">
          <div class="icon">
            <input type="hidden" name="reviewUser" value="<%= r.user %>">
            <button type="submit" class="like-button-form">
              <img src="/site/like.png">
            </button>
            <h3><%= r.likes.length || 0 %> personnes ont trouvées cet avis utile</h3>
          </div>
        </form>

      </div>
    <% }) %>

  </div>

  <div class="popup" id="popUp">
    <div class="icon">
      <img src="/site/profile.webp">
      <h1></h1>
    </div>
    <span class="grey">Membre depuis </span>
    <div class="niveau-info">
      <div class="niveau">
        <h2></h2>
      </div>
      <div class="level">
        <div class="shape xp-0"></div>
      </div>
    </div>
    <div class="missions">
      <div class="mission cyan"><img src="/site/comment.png">
        <h1></h1>
        <span class="grey">Avis ajoutées</span>
      </div>
      <div class="mission violet"><img src="/site/eye.png">
        <h1></h1>
        <span class="grey">Visites</span>
      </div>
      <div class="mission bleu"><img src="/site/oeuvre.png">
        <h1></h1>
        <span class="grey">Oeuvres ajoutées</span>
      </div>
    </div>

    <div class="icon"><img src="/site/trophee.png">
      <h1>Trophées</h1>
    </div>
    <div class="missions" id="trophiesContainer"></div>
    <div class="double-boutons">
      <button class="close-btn" onclick="closePopup()"><span>X</span></button>
    </div>
  </div>


</body>

</html>